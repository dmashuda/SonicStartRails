<%- model_class = Business -%>



<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<%= image_tag @business.logo.url, size: "100" %>
<dl class="dl-horizontal">


  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @business.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:summary) %>:</strong></dt>
  <dd><%= @business.summary %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tagLine) %>:</strong></dt>
  <dd><%= @business.tagLine %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hoursOfOpperation) %>:</strong></dt>
  <dd><%= @business.hoursOfOpperation %></dd>
  <dt><strong><%= model_class.human_attribute_name(:serviceValidTil) %>:</strong></dt>
  <dd><%= @business.serviceValidTil %></dd>
  <dt><strong><%= model_class.human_attribute_name(:domain) %>:</strong></dt>
  <dd><%= @business.domain %></dd>
</dl>


<%= link_to t('.back', :default => t("helpers.links.back")),
              businesses_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_business_path(@business), :class => 'btn btn-default' %>

