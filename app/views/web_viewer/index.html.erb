<!doctype html>
<html lang="en">
<head>
  <title>Sonic Start - Start your online presence today.</title>
  <!-- need to add meta tags -->
  <link href="http://maxcdn.bootstrapcdn.com/bootswatch/3.3.0/paper/bootstrap.min.css" rel="stylesheet">
  <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag "themed" %>


  <link href="css/custom.css" rel="stylesheet">
</head>
<body>

<header>
  <section class="hero">
    <div class="container-fluid">

      <div class="row">
        <div class="col-md-8 col-md-offset-2 text-center inner">
          <h1><%= image_tag @business.logo.url, size: "100" %>
            <%= @business.name%> </h1>
          <p class="lead"><span> <%= @business.tagLine %> </span></p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
          <a href="#Menu" class="btn btn-default">Menu</a>
          <br /> - OR - <br />
          <a href="#Locations" class="btn btn-default">Locations</a>
            <br /><br />
          <blockquote><%= @business.summary %></blockquote>
        </div>
      </div>

    </div>
  </section>
</header>

<section class="features text-center section-padding" id="Locations">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
            <h3>Locations</h3>
        <%= render :partial => 'locations/mapMultipleLocation' %>
        <% @locations.each do |loc| %>
            <%= loc.street_address %> <br />
        <%end%>



      <div class="clearfix"></div>
        </div>
      </div>
    </div>
  </div>
</section>



<section id="Menu" class="text-center start-cta">
  <h3><%= @business.service_list_name%></h3>
  <% @service_lists.each do |list| %>
      <%= list.title%>
        <ul class="list-group">
          <% list.service_items.each do |item| %>
            <li class="list-group-item">
                <span class="badge"><%= item.price%></span>
                <%= item.title%>
                <br />
              <%= item.summary%>
            </li>
          <%end%>
        </ul>
  <%end%>


    </section>


<footer>
  <div class="container">
    <div class="row">
      <div class="col-md-6">

      </div>
      <div class="col-md-6 credit">
        <p>&copy; 2015 <!-- date() --> SonicStart, All Rights Reserved</p>
      </div>
    </div>
  </div>
</footer>

<!-- Javascript at the bottom of the page to speed load time -->
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
</body>
</html>