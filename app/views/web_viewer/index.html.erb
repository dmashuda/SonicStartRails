<!doctype html>
<html lang="en">
<head>
  <title><%= @business.name %> - <%= @business.tagLine %></title>
  <!-- need to add meta tags -->
  <link href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/paper/bootstrap.min.css" rel="stylesheet">
  <meta name="google-site-verification" content="q-h4T-WiaACq5uMsEOoXgFsksydWbFo166wiqebis8k" />
  <%= render :partial => 'seoBusiness' %>

  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag "themed" %>

</head>
<body>

<header>
  <section class="hero">
    <div class="container-fluid">

      <div class="row">
        <div class="col-md-8 col-md-offset-2 text-center inner">
          <h1><%= image_tag @business.logo.url, size: "100" %>
            <%= @business.name%> </h1>
          <p class="lead"><span> <%= @business.tagLine %> </span></p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
          <a href="#Menu" class="btn btn-default">Menu</a>
          <br /> - OR - <br />
          <a href="#Locations" class="btn btn-default">Locations</a>
            <br /><br />
          <blockquote><%= @business.summary %></blockquote>
        </div>
      </div>

    </div>
  </section>
</header>

<section class="features text-center section-padding" id="Locations">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
            <h3>Locations</h3>
        <%= render :partial => 'locations/mapMultipleLocation' %>
        <%= render :partial => 'locations/fancyLocationHours' %>

        <div class="clearfix"></div>
        </div>
      </div>
    </div>
  </div>
</section>



<section id="Menu" class="text-center start-cta">
  <div class="row">
  <h3><%= @business.service_list_name%></h3>
  <% @service_lists.each do |list| %>
        <div class="col-sm-4">
        <h4><span class="label label-default"><%= list.title%></span></h4>
        <ul class="list-group">
          <% list.service_items.each do |item| %>
            <li class="list-group-item">
                <span class="badge"><%= item.price%></span>
                <%= item.title%>
                <br />
              <%= item.summary%>
            </li>
          <%end%>
        </ul>
        </div>
  <%end%>
  </div>


    </section>


<footer>
  <div class="container">
    <div class="row">
      <div class="col-md-6">

      </div>
      <div class="col-md-6 credit">
        <p>&copy; 2015 <!-- date() --> SonicStart, All Rights Reserved</p>
      </div>
    </div>
  </div>
</footer>

<!-- Javascript at the bottom of the page to speed load time -->
</body>
</html>