<script type="application/ld+json">
{
  "@context" : "http://schema.org",
  "@type" : "LocalBusiness",
  "name" : "<%= @business.name%>",
  "image" : "<%= @business.logo.url%>",

<% @locations.each do |location| %>

  "address" : {
    "@type" : "PostalAddress",
    "streetAddress" : "<%= location.street_address%>"
  }
  <%end%>
}
</script>