<script type="application/ld+json">
{
  "@context" : "http://schema.org",
  "@type" : "Restaurant",
  "name" : "<%= @business.name%>",
  "image" : "<%= @business.logo.url%>",



  <% @locations.each do |location| %>
  "telephone" : "<%= location.phone_number%>",

  "<%= location.name%>" : {
    "@type" : "PostalAddress",
    "streetAddress" : "<%= location.street_address%>"
  },
  <%end%>


  "menu" : "<%= @business.domain%>/#Menu"
}
</script>