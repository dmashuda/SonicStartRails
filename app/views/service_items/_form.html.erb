<%= form_for @service_item, :html => { :class => "form-horizontal service_items" } do |f| %>

    <% if @service_item.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@service_item.errors.count, "error") %> prohibited this service_item from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @service_item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%= error_span(@service_item[:title]) %>
  </div>
  <div class="control-group">
    <%= f.label :summary, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :summary, :class => 'form-control' %>
    </div>
    <%= error_span(@service_item[:summary]) %>
  </div>
  <div class="control-group">
    <%= f.label :price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :price, :class => 'form-control' %>
    </div>
    <%= error_span(@service_item[:price]) %>
  </div>
  <div class="control-group">
    <%= f.label :service_list_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :service_list_id, :class => 'form-control' %>
    </div>
    <%= error_span(@service_item[:service_list_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            service_items_path, :class => 'btn btn-default' %>

<% end %>
