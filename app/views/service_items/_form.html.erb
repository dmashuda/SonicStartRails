<%= simple_form_for( @service_item, multipart: true ,:html => { :class => 'form-horizontal' }) do |f| %>
    <%= image_tag @service_item.image.url, size: "100" %>

    <%= f.input :title %>
  <%= error_span(@service_item[:title]) %>
  <%= f.input :summary %>
  <%= error_span(@service_item[:summary]) %>
  <%= f.input :price%>
  <%= error_span(@service_item[:price]) %>
  <%= f.input :service_list_id, as: :select, collection: @service_lists %>
  <%= error_span(@service_item[:service_list_id]) %>
    <%= f.input :image, as: :file%>
    <%= error_span(@service_item[:image]) %>


    <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                service_items_path, :class => 'btn btn-default' %>
<% end %>
