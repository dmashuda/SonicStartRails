<%= simple_form_for @service_item, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= error_span(@service_item[:title]) %>
  <%= f.input :summary %>
  <%= error_span(@service_item[:summary]) %>
  <%= f.input :price %>
  <%= error_span(@service_item[:price]) %>
  <%= f.input :service_list_id, as: :select, collection: @service_lists %>
  <%= error_span(@service_item[:service_list_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                service_items_path, :class => 'btn btn-default' %>
<% end %>
