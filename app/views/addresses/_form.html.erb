<%= simple_form_for @address, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :street %>
  <%= error_span(@address[:street]) %>
  <%= f.input :city %>
  <%= error_span(@address[:city]) %>
  <%= f.input :geographicalRegion %>
  <%= error_span(@address[:geographicalRegion]) %>
  <%= f.input :country %>
  <%= error_span(@address[:country]) %>
  <%= f.input :postal_code %>
  <%= error_span(@address[:postal_code]) %>


  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                addresses_path, :class => 'btn btn-default' %>
<% end %>
